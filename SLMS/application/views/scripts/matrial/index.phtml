					echo '<div class="well well-sm" style="background-color:;">'.$courseMatrial[$i]['description'];
					echo '<div class="actions"><a href="'.$baseUrl.'/Matrial/edit/id/'.$mid.'"><span class="glyphicon glyphicon-edit"><span>Edit </a>&nbsp;&nbsp;';

					echo '<a href="'.$baseUrl.'/Matrial/delete/id/'.$mid.'"><span class="glyphicon glyphicon-trash" ></span>Delete </a>&nbsp;&nbsp;';

					if($courseMatrial[$i]['enabledownload']){
						echo '<a href="'.$baseUrl.'/Matrial/lock/id/'.$mid.'"><span class="glyphicon glyphicon-lock"><span>lock </a>&nbsp;&nbsp;' ;						
					}else{
						echo '<a href="'.$baseUrl.'/Matrial/lock/id/'.$mid.'">Unlock </a>&nbsp;&nbsp;' ;						
					}					
					if($courseMatrial[$i]['isshow']){
						echo '<a href="'.$baseUrl.'/Matrial/visible/id/'.$mid.'"><span class="glyphicon glyphicon-eye-close"><span>hide </a>&nbsp; &nbsp;' ;
					}else{

						echo '<a href="'.$baseUrl.'/Matrial/visible/id/'.$mid.'"><span class="glyphicon glyphicon-eye-open"><span>show</a>&nbsp; &nbsp;' ;
					}					

					echo '</div></div>' ;
					for($j=0 ; $j<count($materialComments[$mid]); $j++){
						echo '<div>'.$materialComments[$mid][$j]['body'].'</div>' ;
					}
				}			
			}
			echo '<hr/>' ;
		}
		showMatrail ("pdf",$courseMatrial,$materialComments,$baseUrl) ;
		showMatrail ("word",$courseMatrial,$materialComments,$baseUrl) ;
		showMatrail ("vedio",$courseMatrial,$materialComments,$baseUrl) ;

