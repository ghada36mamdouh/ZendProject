		function showMatrail ($type,$courseMatrial,$materialComments,$baseUrl) {
			echo '<h4>'.$type.'</h4><hr/>' ;
			for($i=0 ; $i<count($courseMatrial); $i++){
				if($courseMatrial[$i]['type'] == $type){
					//echo '<img src="'.$this->baseUrl().'images/icons/pdf.ico"/>' ;
